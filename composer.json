{
    "name": "eminiarts/aura-notifications",
    "description": "A comprehensive notification system for Aura CMS with user notifications and system updates",
    "keywords": [
        "aura",
        "aura-cms",
        "laravel",
        "notifications",
        "system-updates",
        "livewire"
    ],
    "homepage": "https://github.com/eminiarts/aura-notifications",
    "license": "MIT",
    "authors": [
        {
            "name": "Bajram Emini",
            "email": "bajram@eminiarts.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0|^11.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Aura\\Notifications\\": "src",
            "Aura\\Notifications\\Database\\Factories\\": "database/factories",
            "Aura\\Notifications\\Database\\Seeders\\": "database/seeders"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aura\\Notifications\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aura\\Notifications\\NotificationsServiceProvider"
            ],
            "aliases": {
                "Notifications": "Aura\\Notifications\\Facades\\Notifications"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}